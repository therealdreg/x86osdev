 ../../gui/paramtree.h ../../logio.h ../../instrument/stubs/instrument.h \
 ../../misc/bswap.h ../../plugin.h ../../extplugin.h ../../param_names.h \
 ../../pc_system.h ../../bx_debug/debug.h ../../config.h ../../osdep.h \
